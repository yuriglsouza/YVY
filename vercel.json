{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api"
        },
        {
            "source": "/auth/(.*)",
            "destination": "/api"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/index.ts": {
            "includeFiles": "server/**,shared/**"
        }
    },
    "env": {
        "PYTHON_SERVICE_URL": "https://yvy.onrender.com"
    }
}